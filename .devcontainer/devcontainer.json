{
    "name": "vuldeepecker-dev",
    "dockerComposeFile": [
        "../docker/docker-compose.yml" // the docker compose file that we want to run
    ],
    "service": "vuldeepecker", // The service in docker-compose.yml that we want vs code to use as a dev containers 
    "shutdownAction": "stopCompose",
    "workspaceFolder": "/vuldeepecker",
    "overrideCommand": true,
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.flake8",
                "ms-python.black-formatter",
                "eamodio.gitlens"
            ]
        }
    }
}